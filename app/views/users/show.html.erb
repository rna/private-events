
<% if @events %>
  <h2>List of your posts</h2>
  <ul> 
    <% @events.each do |event| %>
      <li><%= event.title %></li>
    <% end %>
  </ul>
  <%= link_to "Create a New event", new_event_path %>
<% else %>
  <%= link_to "Create a New event", new_event_path %>
<% end %>

<h2>Events you planned to attend:</h2>
<ul>
  <% @current_user.attendances.collect do |a|  %>
    <li><%= a.attended_event.title %></li>
  <% end %>
</ul>

<h2>Upcoming</h2>
<%= @upcoming_events %>